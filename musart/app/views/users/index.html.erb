<h1>Artists</h1>

<%= search_form_for @search do |f| %>
 <div class="field">
<%= f.label :full_name_cont, "Name contains" %>
<%= f.text_field :full_name_cont %>
</div>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>

<%= link_to "Clear Search", request.path, class:"cancel-button" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Full name</th>
      <th>Bio</th>
      <th>Email</th>
      <th>Profile image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.full_name %></td>
        <td><%= user.bio %></td>
        <td><%= user.email %></td>
        <td><%= image_tag user.profile_image_url(:thumb).to_s %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>






