<div class="panel-heading"><h1>Artist Projects</h1>
<div class="col-sm-3 col-md-3 pull-right">
<form class="navbar-form" role="search">
<div class="input-group">
<%= search_form_for @search do |f| %>
<br>
<div class="form-group">
  <%= f.label :name_or_category_or_style_cont, "Name contains", class: "form-control", class: "input-group-btn" %>
  <%= f.text_field :name_or_category_or_style_cont %>
</div>
<div class="input-group"><%= f.submit "Search" %></div>
<% end %>
<br>

<%= link_to "Clear Search", request.path, class:"cancel-button" %>
</form>
</div>
</div>
</form>
</div>
</div>

<table class="table table-hover table-borded table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date created</th>
      <th>Info</th>
      <th>Category</th>
      <th>Style</th>
      <th>Location</th>
      <th>Video url</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.date_created %></td>
      <td><%= project.info %></td>
      <td><%= project.category %></td>
      <td><%= project.style %></td>
      <td><%= project.location %></td>
      <td><iframe src="https://www.youtube.com/embed/<%= project.video_url%>" frameborder="0" width = "140" height="80"></iframe></td>
      <td><%= image_tag project.image_url(:thumb), class: "img-circle" %></td>
      <td><%= link_to 'Show', project %></td>
      <td><%= link_to 'Edit', edit_project_path(project) %></td>
      <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>




